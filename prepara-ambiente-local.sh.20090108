	if ! [ -d $homeinstall ]; then mkdir $homeinstall;fi
	cp $zipntop $homeinstall
	
	echo "## instalando ntop"
	$configurentop
	groupadd ntop
	useradd ntop -g ntop
	chown -R ntop.ntop /usr/local/$versaontop/share/ntop /usr/local/$versaontop/var
}

